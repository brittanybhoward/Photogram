<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Photo #<%= @photo.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Caption</dt>
              <dd><%= @photo.caption %></dd>

              <dt>Owner</dt>
              <dd><%= @photo.owner_id %></dd>

              <dt>Image</dt>
              <dd>
                <%= image_tag @photo.image, :class => "img-responsive" %>
              </dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to icon('chevron-left'), photos_path, class: "btn btn-primary" %>

              <%= link_to icon('edit'), edit_photo_path(@photo), class: "btn btn-warning" %>

              <%= link_to icon('trash-o'), @photo, method: :delete, data: { confirm: "Do you really want to delete this photo?" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
