<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Favoriting #<%= @favoriting.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Photo</dt>
              <dd><%= @favoriting.photo_id %></dd>

              <dt>Favorited by</dt>
              <dd><%= @favoriting.favorited_by_id %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to icon('chevron-left'), favoritings_path, class: "btn btn-primary" %>

              <%= link_to icon('edit'), edit_favoriting_path(@favoriting), class: "btn btn-warning" %>

              <%= link_to icon('trash-o'), @favoriting, method: :delete, data: { confirm: "Do you really want to delete this favoriting?" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
